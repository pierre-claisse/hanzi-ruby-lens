{
  "productName": "Hanzi Ruby Lens",
  "version": "0.1.0",
  "identifier": "com.hanzirubylens.app",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "Hanzi Ruby Lens",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "shadow": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window",
          "description": "Main window permissions",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-close",
            "core:window:allow-set-fullscreen",
            "core:window:allow-is-fullscreen",
            "core:window:allow-set-resizable",
            "core:window:allow-start-dragging",
            "core:window:default",
            {
              "identifier": "opener:allow-open-url",
              "allow": [{ "url": "https://**" }]
            },
            "clipboard-manager:allow-write-text"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
