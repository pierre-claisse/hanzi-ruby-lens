{
  "productName": "Hanzi Ruby Lens",
  "version": "0.1.0",
  "identifier": "com.hanzirubylens.app",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "Hanzi Ruby Lens",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
